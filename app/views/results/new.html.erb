<%= form_for @result do |f| %>
 
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @result.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :Student_RollNumber %>
	<% options = options_from_collection_for_select(@users, 'id', 'rollnumber') %>
	<%= f.select :user_id,  options %>
  </p>
   
  <p>
    <%= f.label :Subject %>
	<% options = options_from_collection_for_select(@subjects, 'sname', 'sname') %>
	<%= f.select :sname,  options %>
  </p>
  
  <p>
    <%= f.label :marks %>
    <%= f.text_field :marks %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
  <p><%= link_to('All Results', results_path, :class => 'btn btn-info')  %></p>
  <%if current_user %>
  	<% if current_user.role == 'teacher'%>
  		<p><%= link_to('My Home', teacher_login_results_path, :class => 'btn btn-info')  %></p>
 	<%elsif current_user.role == 'head_master'%>
  		<p><%= link_to('My Home', headmaster_login_results_path, :class => 'btn btn-info')  %></p>
  	<%end%>
  <%end%>
<% end %>

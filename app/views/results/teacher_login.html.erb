<h1 class="text-center">Welcome<%= @name %></h1>
<%if @number_of_students >= 1%>
	<h1>List of Students</h1>
	<table class='table'>
  	  <tr>
		  <th>Student Name</th>
		  <th>Roll Number</th>
		  <th>Phone</th>
		  <th>Gender</th>
		  <th>Email</th>
	  </tr>
	  <% @students.each do |student| %>
	  <tr>
      	<td><%= student.name %></td>
	  	<td><%= student.rollnumber %></td>
	  	<td><%= student.phone %></td>
	  	<td><%= student.gender %></td>
	  	<td><%= student.email %></td>
	  </tr>
	  <% end %>
	</table>
<%end%>
<p><%= link_to('Add a Subject', new_subject_path, :class => 'btn btn-info') %> </p>
<p><%= link_to('Add the Result', new_result_path, :class => 'btn btn-info') %> </p>